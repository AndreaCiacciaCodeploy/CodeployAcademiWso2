<?xml version="1.0" encoding="UTF-8"?>
<api context="/api/workshop1" name="api-workshop" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" protocol="http" url-mapping="/*">
        <inSequence>
            <property expression="$axis2:REST_URL_POSTFIX" name="path" scope="default" type="STRING"/>
            <log level="custom">
                <property expression="get-property('path')" name="path_log"/>
            </log>
            <call>
                <endpoint>
                    <http method="get" uri-template="http://jsonplaceholder.typicode.com/users"/>
                </endpoint>
            </call>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <call-template description="errorhandler-tm" target="errorhandler-tm">
                <with-param name="source" value="500"/>
                <with-param name="text" value="Internal Server Error"/>
            </call-template>
        </faultSequence>
    </resource>
</api>
