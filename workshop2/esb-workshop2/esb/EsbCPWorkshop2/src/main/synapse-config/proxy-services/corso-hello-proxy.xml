<?xml version="1.0" encoding="UTF-8"?>
<proxy name="corso-hello-proxy" startOnLoad="true" transports="https http" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <log level="full">
                <property name="test" value="ciaooo"/>
            </log>
            <property name="prova" scope="default" type="STRING" value="1"/>
            <payloadFactory media-type="xml">
                <format>
                    <ns:echoIntResponse xmlns:ns="http://echo.services.core.carbon.wso2.org">
                        <return>$1</return>
                    </ns:echoIntResponse>
                </format>
                <args>
                    <arg evaluator="xml" expression="get-property('prova')"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </target>
    <publishWSDL uri="http://localhost:8280/services/echo?wsdl"/>
</proxy>
